<% 
String.prototype.capitalize = function() {
    return this.charAt(0).toUpperCase() + this.slice(1);
}
%> 
<div class="container pt-5">
    <form class="pb-5" method="POST" action="/users/account">
        <h2 class="mb-5 display-4">Account Information</h2>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" id="email" value="<%= user.email %>" name="email">
        </div>
        <div class="mb-3">
            <label for="first_name" class="form-label">First Name</label>
            <input type="text" class="form-control" id="first_name" value="<%= user.first_name.capitalize() %>" name="first_name">
        </div>
        <div class="mb-3">
            <label for="last_name" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="last_name" value="<%= user.last_name.capitalize() %>" name="last_name">
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input type="text" class="form-control" id="address" value="<%= user.address %>" name="address">
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <select class="form-select" id="country" value="<%= user.country %>" name="country">
                <% data.countries.forEach(country => { %>
                    <% if(user.country === country.code) { %>
                        <option value="<%= country.code %>" selected><%= country.name %></option>
                    <% } else { %>
                        <option value="<%= country.code %>"><%= country.name %></option>
                    <% } %>
                <% }) %>
              </select>
        </div>
        <div class="mb-3">
            <label for="state" class="form-label">State / Region</label>
            <input type="text" class="form-control" id="state" value="<%= user.state %>" name="state">
        </div>
        <div class="mb-3">
            <label for="zip" class="form-label">Zip Code</label>
            <input type="text" class="form-control" id="zip" value="<%= user.zip %>" name="zip">
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Save Account</button>
        </div>
    </form>
    <hr>
    <div class="pt-5 pb-5">
        <form method="POST" action="/users/delete-account" onsubmit="return confirm('Are you sure you wish to delete your account?\nthis action is irreversible');">
            <button class="btn btn-danger">Delete My Account</button>
        </form>
    </div>
</div>
