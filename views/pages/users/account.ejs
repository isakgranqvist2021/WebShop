<% 
String.prototype.capitalize = function() {
    return this.charAt(0).toUpperCase() + this.slice(1);
}
%> 
<div class="container pt-5">
    <form class="pb-5" id="update-account-form" method="POST" action="/users/account">
        <h2 class="mb-5 display-4">Account Settings</h2>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" id="email" value="<%= user.email %>" name="email">
        </div>
        <div class="mb-3">
            <label for="first_name" class="form-label">First Name</label>
            <input type="text" class="form-control" id="first_name" value="<%= user.first_name.capitalize() %>" name="first_name">
        </div>
        <div class="mb-3">
            <label for="last_name" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="last_name" value="<%= user.last_name.capitalize() %>" name="last_name">
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input type="text" class="form-control" id="address" value="<%= user.address %>" name="address">
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <select class="form-select" id="country" value="<%= user.country %>" name="country">
                <% data.countries.forEach(country => { %>
                    <% if(user.country === country.code) { %>
                        <option value="<%= country.code %>" selected><%= country.name %></option>
                    <% } else { %>
                        <option value="<%= country.code %>"><%= country.name %></option>
                    <% } %>
                <% }) %>
              </select>
        </div>
        <div class="mb-3">
            <label for="state" class="form-label">State / Region</label>
            <input type="text" class="form-control" id="state" value="<%= user.state %>" name="state">
        </div>
        <div class="mb-3">
            <label for="zip" class="form-label">Zip Code</label>
            <input type="text" class="form-control" id="zip" value="<%= user.zip %>" name="zip">
        </div>
    </form>
    <form method="POST" id="del-account-form" action="/users/delete-account" onsubmit="return confirm('Are you sure you wish to delete your account?\nthis action is irreversible');"></form>
    <hr>

    <div class="pt-5 pb-5">
        <form class="d-flex justify-content-between align-items-center">
            <button type="button" class="btn btn-danger" onclick="if(confirm('Are you sure you wish to delete your account?\nthis action is irreversible')) document.getElementById('del-account-form').submit()">Delete My Account</button>
            <button type="button" class="btn btn-primary" onclick="document.getElementById('update-account-form').submit()">Save Account</button>
        </form>
    </div>
</div>
